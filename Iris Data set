data(iris)
print("Dimension:")
print(dim(iris))
print("\nStructure:")
print(str(iris))
print("\nSummary statistics:")
print(summary(iris))
print("\nStandard Deviation of all features:")
print(apply(iris[, 1:4], 2, sd))
print("\nMean of features grouped by Species:")
print(tapply(iris$Sepal.Length, iris$Species, mean))
print("\nStandard deviation of features grouped by Species:")
print(tapply(iris$Sepal.Length, iris$Species, sd))
print("\nQuantile value of sepal width:")
print(quantile(iris$Sepal.Width))
print("\nQuantile value of sepal length:")
print(quantile(iris$Sepal.Length))
iris1 <- iris
iris1$Sepal.Length.Cate <- cut(iris1$Sepal.Length, breaks = quantile(iris1$Sepal.Length))
print("\nNew data frame iris1:")
print(head(iris1))
print("\nAverage value of numerical variables by Species and Sepal.Length.Cate:")
print(aggregate(cbind(Sepal.Length, Sepal.Width, Petal.Length, Petal.Width) ~ Species + Sepal.Length.Cate, data = iris1, FUN = mean))
print("\nAverage mean value of numerical variables by Species and Sepal.Length.Cate:")
print(aggregate(cbind(Sepal.Length, Sepal.Width, Petal.Length, Petal.Width) ~ Species + Sepal.Length.Cate, data = iris1, FUN = function(x) mean(mean(x))))
library(dplyr)
pivot_table <- iris1 %>%
  group_by(Species, Sepal.Length.Cate) %>%
  summarise_all(mean)
print("\nPivot Table based on Species and Sepal.Length.Cate:")
print(pivot_table)
